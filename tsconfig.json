{
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node", // https://github.com/gatsbyjs/gatsby/issues/25324#issuecomment-660629703
    "lib": ["dom", "es2017"],
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true, // do not emit outputs
    "skipLibCheck": true,
    "pretty": true
  }
}
